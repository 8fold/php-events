{
  "name": "8fold/php-events",
  "description": "A library that facilitates tracking and displaying events",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Josh Bruce",
      "email": "josh@8fold.pro"
    }
  ],
  "require": {
    "php": "^7.4||^8.0",
    "nesbot/carbon": "^2.53",
    "8fold/php-filesystem": "^0.5.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.6",
    "phpstan/phpstan": "^0.12",
    "pestphp/pest": "^1.20"
  },
  "autoload": {
    "psr-4": {
      "Eightfold\\Events\\": "./src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
    }
  },
  "config": {
    "preferred-install": "dist"
  },
  "prefer-stable": true,
  "scripts": {
    "prod": "@production",
    "production": ["@style", "@stan", "@test"],
    "style": "./vendor/bin/phpcs --standard=phpcs.xml -p ./src",
    "stan": "./vendor/bin/phpstan analyze",
    "test": "./vendor/bin/pest"
  }
}
